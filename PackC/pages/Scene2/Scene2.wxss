/* PackC/pages/Scene2/Scene2.wxss */

.viewbox{
  border: 0.03em solid black;
}

.icon{
  float: left;
  margin-top: 30rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

#optionButton{
  margin-left: 50rpx;
  height: 100rpx;
  background-color: white;
}

#optionButton::after{
  border: none;
}


.habit {
  margin: 0rpx auto;
  width: 100%;
  height: 115px;
  border-radius: 10rpx;
  background-color: #fff;
  display: flex;
  padding: 15rpx;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1px solid #f1f1f1;
}
.habit .index {
  margin: 25rpx 0rpx 0rpx 0rpx;
  font-weight: bold;
  color: #c93a3a;
}
.habit .icon {
  margin-right: 0rpx;
}
.habit .icon .iconImg {
  margin-top: 10rpx;
  width: 25rpx;
  height: 70rpx;
}
.habit .info {
  display: flex;
  flex-direction: column;
  width: 60vw;
}
.habit .info .title {
  margin: 0rpx 0rpx;
  margin-right: 70rpx;
  font-size: 30rpx;
}
.habit .img {
  position: absolute;
  right: 30rpx;
  margin-top: 80rpx;
  width: 60rpx;
  height: 60rpx;
}
.habitlist {
  position: relative;
}
.kelong {
  z-index: 999;
  position: absolute;
  box-shadow: 1px 1px 5px #ccc;
}
.gray {
  background-color: #efecec;
}

#container-left{
  float: left;
  width: 40%;
}

#container-right{
  float: right;
  width: 60%;
}

.left-cell{
  height: 115px; 
  font-size: 10rpx;
}