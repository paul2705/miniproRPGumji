/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

#BackgroundImg{
  width: 100%;
}

.container_content{
  margin-left: 2%;
  width: 95.5%;
  height: 375rpx;
  border: 0.01em solid lightblue;
  border-radius: 5% 5% 5% 5%;
}

#nextButton{
  float: right;

}

#content{
  margin-left: 10%;
}

#Title{
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 120%;
  color: darkgray;
}

#ProgressBox{
  height: 6px;
  width: 100%;
  background-color: #f5f5f5;
}

#Progress1{
  display: block;
  background-color: #2486ff;
  width: calc(var(--percent)*1%);
  height: 6px;
  white-space: nowrap;
  overflow: hidden;
}