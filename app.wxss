/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.cover-box{
  position: fixed;
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
  background-image: url(https://7374-studentunion-rpg-8frojuvebf55cd9-1311954976.tcb.qcloud.la/bg.jpg?sign=ddb81115d10484ab510401841c1d6ff1&t=1652696296);
  z-index: -1;
}

.cover-box_PackC{
  position: fixed;
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
  background-image: url(https://7374-studentunion-rpg-8frojuvebf55cd9-1311954976.tcb.qcloud.la/HeadMasterMeeting/background_PackC.jpg?sign=1ac34ae24a925e80c66bc3335a48641c&t=1655874006);
  z-index: -1;
}

#BackgroundView{
  width: 100%;
  box-shadow:0 0 15rpx 10rpx rgba(165, 42, 42, 0.26) inset;
  z-index: 2;
}

#BackgroundImg{
  width: 100%;
  z-index: 0;
}

.FullScrow{
  width: 100%;
  height: 1050rpx;
}

#FullImg{
  width: 100%;
  height: 1050rpx;
  z-index: 0;
}

.container_content{
  margin-left: 2%;
  width: 95.5%;
  height: 375rpx;
  border: 0.01em solid lightblue;
  border-radius: 5% 5% 5% 5%;
  background-color: rgba(169, 175, 177, 0.342);
}

#nextButton{
  width: 30px;
  height: 20px;
  margin-top: -60rpx;
  margin-right: 25rpx;
  float: right;
  background: url(https://636c-cloud1-4gl4jj9w3cb8d273-1311875883.tcb.qcloud.la/NexT.svg?sign=3f18e9151444be81bbb9bebe306aacb6&t=1652676019) no-repeat;
  background-size: cover;
}

#nextButton::after{
  border: none;
}

navigator#optionButton{
  height: 60rpx;
  font-size: large;
  border: 0.1em solid lightgray;
  margin: 2% 3% 2% 3%;
}

navigator#goButton{
  height: 60rpx;
  font-size: large;
  border: 0.1em solid lightgray;
  margin: 0% 3% 2% 3%;
}

#content{
  margin-left: 10%;
}

#Title{
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 120%;
  color: darkgray;
}

#ProgressBox{
  height: 6px;
  width: 100%;
  background-color: #f5f5f5;
}

#Progress1{
  display: block;
  background-color: #2486ff;
  width: calc(var(--percent)*1%);
  height: 6px;
  white-space: nowrap;
  overflow: hidden;
}