/* pages/Hmeeting/Hmeeting.wxss */
.userinfo {
  width: 300rpx;
  margin-left: 80%;
  margin-bottom: 5%;
  display: flex;
  flex-direction: column;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.coverBox{
  position: fixed;
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
  background-image: url(https://7374-studentunion-rpg-8frojuvebf55cd9-1311954976.tcb.qcloud.la/HeadMasterMeeting/%E9%99%A2%E9%95%BF%E8%A7%81%E9%9D%A2%E4%BC%9A%E6%B5%B7%E6%8A%A5_1.png?sign=69f076a1fcfa968cf2ff180b31698f65&t=1655987654);
  z-index: -1;
}

@keyframes MoveIn {
  from {margin-top: 100%;}
  to {margin-top: 0%; }
}

navigator#GoButton{
  height: 60rpx;
  font-size: large;
  text-align: center;
  color: white;
  border: 0.1em solid lightgray;
  margin: 0% 3% 2% 3%;
  border-radius: 5% 5% 5% 5%;
}

.button{
  animation-name: MoveIn;
  animation-duration: 3s;
  animation-iteration-count: 1;
}

.Introduction{
  color: white;
  margin-bottom: 60%;
}

.buttonContainer{
  width: 400rpx;
  display: flex;
  justify-content: center;
}